{
  "metadata": {
    "spec-version": "1.5"
  },
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "name": "referenceName",
          "label": "Reference Name",
          "widget-type": "textbox"
        },
        {
          "name": "authType",
          "label": "Authentication Type",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "inline",
            "default": "basic",
            "options": [
              {
                "id": "basic",
                "label": "Basic"
              },
              {
                "id": "oauth2",
                "label": "OAuth2"
              }
            ]
          }
        },
        {
          "name": "authUsername",
          "label": "Username",
          "widget-type": "textbox"
        },
        {
          "name": "authPassword",
          "label": "Password",
          "widget-type": "password"
        },
        {
          "name": "authClientId",
          "label": "Client ID",
          "widget-type": "securekey-text",
          "widget-attributes": {
            "placeholder": "OAuth2 Client ID"
          }
        },
        {
          "name": "authClientSecret",
          "label": "Client Secret",
          "widget-type": "securekey-text",
          "widget-attributes": {
            "placeholder": "OAuth2 Client Secret"
          }
        },
        {
          "name": "apiEndpoint",
          "label": "REST API Endpoint",
          "widget-type": "select",
          "widget-attributes": {
            "values": [
              "https://rest.zuora.com",
              "https://rest.eu.zuora.com",
              "https://rest.apisandbox.zuora.com",
              "https://rest.sandbox.eu.zuora.com",
              "https://rest.pt1.zuora.com"
            ],
            "default": "https://rest.zuora.com"
          }
        },
        {
          "name": "baseObjects",
          "label": "Object to pull",
          "widget-type": "select",
          "widget-attributes": {
            "values": [
              "Products",
              "Orders",
              "DebitMemos",
              "CreditMemos"
            ]
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "widget-type": "non-editable-schema-editor",
      "schema": {
      }
    }
  ],
  "filters": [
    {
      "name": "AuthTypeBasicFilter",
      "condition": {
        "expression": "authType == 'basic'"
      },
      "show": [
        {
          "name": "authUserName",
          "type": "property"
        },
        {
          "name": "authPassword",
          "type": "property"
        }
      ]
    },
    {
      "name": "AuthTypeAdvFilter",
      "condition": {
        "expression": "authType == 'oauth2'"
      },
      "show": [
        {
          "name": "authClientId",
          "type": "property"
        },
        {
          "name": "authClientSecret",
          "type": "property"
        }
      ]
    }
  ]
}